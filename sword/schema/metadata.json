{
    "$schema": "http://json-schema.org/schema#",
    "title": "Metadata",
    "description": "Metadata payload for a new submission. ",
    "required": [
        "http://purl.org/net/sword/terms/metadata"
    ],
    "definitions": {
        "metadata": {
            "description": "Metadata document for a deposit.",
            "type": "object",
            "required": [
                "http://purl.org/dc/terms/title",
                "http://purl.org/dc/terms/abstract",
                "http://purl.org/dc/terms/creator",
                "http://purl.org/dc/terms/license",
                "http://purl.org/dc/terms/subject"
            ],
            "properties": {
                "http://purl.org/dc/terms/title": {
                    "description": "Title of the submission.",
                    "type": "string"
                },
                "http://purl.org/dc/terms/abstract": {
                    "description": "Paper abstract provided by author.",
                    "type": "string"
                },
                "http://purl.org/dc/terms/creator": {
                    "description": "Authors",
                    "type": "array",
                    "minItems": 1,
                    "items": {
                        "description": "Details about the author agent",
                        "type": "object"
                    }
                },
                "http://purl.org/dc/terms/license": {
                    "description": "License to be applied to the submission.",
                    "type": "string",
                    "format": "uri"
                },
                "http://purl.org/dc/terms/subject": {
                    "description": "The archive(s) and subject class(es) for this submission.",
                    "type": "array",
                    "minItems": 1,
                    "items": {
                        "type": "object"
                    }
                },
                "http://purl.org/dc/terms/identifier": {
                    "description": "External identifier for the submission, such as a DOI. e.g. `doi:10.1234/56789`",
                    "type": "string",
                    "format": "uri"
                },
                "http://purl.org/dc/terms/identifier": {
                    "description": "External identifier for the submission, such as a DOI.",
                    "type": "string",
                    "format": "uri"
                }
            }
        }
    },
    "properties": {
        "http://purl.org/net/sword/terms/metadata": {
            "$ref": "#/definitions/metadata"
        },
        "http://purl.org/net/sword/terms/files": {
            "description": "Remote files to be included in the submission package.",
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "href": {
                        "description": "Dereferencable location of the package.",
                        "type": "string",
                        "format": "uri"
                    },
                    "ttl": {
                        "description": "Time at which resource will become unavailable.",
                        "type": "string",
                        "format": "date-time"
                    },
                    "dereference": {
                        "description": "Whether or not the resource should be retrieved.",
                        "type": "boolean"
                    },
                    "type": {
                        "description": "MIME type of the remote resource.",
                        "type": "string"
                    },
                    "packaging": {
                        "description": "URI unambiguously identifying the packaging profile.",
                        "type": "string",
                        "format": "uri"
                    }
                }
            }
        }
    }
}
