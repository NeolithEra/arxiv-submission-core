{
    "$schema": "http://json-schema.org/schema#",
    "id": "http://arxiv.org/schema/submit/metadata.json",
    "title": "Metadata",
    "description": "Metadata payload for a new submission. This is the arXiv.org implementation of the SWORDv3 specification for the metadata document.",
    "type": "object",
    "required": [
        "http://purl.org/net/sword/terms/metadata"
    ],
    "definitions": {
        "metadata": {
            "description": "Metadata document for a deposit.",
            "type": "object",
            "required": [
                "http://purl.org/dc/terms/title",
                "http://purl.org/dc/terms/abstract",
                "http://purl.org/dc/terms/creator",
                "http://purl.org/dc/terms/license",
                "http://purl.org/dc/terms/subject"
            ],
            "properties": {
                "http://purl.org/dc/terms/title": {
                    "description": "Title of the submission.",
                    "type": "string"
                },
                "http://purl.org/dc/terms/abstract": {
                    "description": "Paper abstract provided by author.",
                    "type": "string"
                },
                "http://purl.org/dc/terms/creator": {
                    "description": "Authors",
                    "type": "array",
                    "minItems": 1,
                    "items": {
                        "description": "Details about the author agent",
                        "type": "object",
                        "required": [
                            "http://arxiv.org/schema/terms/name"
                        ],
                        "properties": {
                            "http://arxiv.org/schema/terms/name": {
                                "description": "Freeform representation of author name. Generally: `<surname>, <forename> <initial(s)>`.",
                                "type": "string",
                            },
                            "http://purl.org/dc/terms/identifier": {
                                "description": "Author authority record URI. This may be an arXiv authority URI or an ORCID identifier.",
                                "type": "string",
                                "format": "uri"
                            }
                        }
                    }
                },
                "http://purl.org/dc/terms/license": {
                    "description": "License to be applied to the submission.",
                    "type": "string",
                    "format": "uri"
                },
                "http://purl.org/dc/terms/subject": {
                    "description": "The archive(s) and subject class(es) for this submission.",
                    "type": "array",
                    "minItems": 1,
                    "items": {
                        "type": "object",
                        "required": [
                            "http://arxiv.org/schema/terms/primary",
                            "http://arxiv.org/schema/terms/archive",
                            "http://arxiv.org/schema/terms/subjectClass"
                        ],
                        "properties": {
                            "http://arxiv.org/schema/terms/primary": {
                                "description": "Indicates whether or not this is the primary category. This must only be true for one item.",
                                "type": "boolean"
                            },
                            "http://arxiv.org/schema/terms/archive": {
                                "description": "The abbreviated identifier for an arXiv archive. E.g. cs, math. Only for use in a secondary classification.",
                                "type": "string"
                            },
                            "http://arxiv.org/schema/terms/category": {
                                "description": "The abbreviated identifier for an arXiv subject class. E.g. KT, DC.",
                                "type": "string"
                            }
                        }
                    }
                },
                "http://purl.org/dc/terms/identifier": {
                    "description": "External identifier for the submission, such as a DOI. e.g. `doi:10.1234/56789`",
                    "type": "string",
                    "format": "uri"
                },
                "http://purl.org/dc/terms/identifier": {
                    "description": "External identifier for the submission, such as a DOI.",
                    "type": "string",
                    "format": "uri"
                },
                "http://arxiv.org/schema/terms/msc_class": {
                    "description": "MSC subject class for this submission.",
                    "type": "string"
                },
                "http://arxiv.org/schema/terms/acm_class": {
                    "description": "ACM subject class for this submission.",
                    "type": "string"
                },
                "http://arxiv.org/schema/terms/report_num": {
                    "description": "Report number for this submission.",
                    "type": "string"
                },
                "http://arxiv.org/schema/terms/journal_ref": {
                    "description": "Journal ref (citation) for this submission.",
                    "type": "string"
                }
            }
        }
    },
    "properties": {
        "http://purl.org/net/sword/terms/metadata": {
            "$ref": "#/definitions/metadata"
        },
        "http://purl.org/net/sword/terms/files": {
            "description": "Remote files to be included in the submission package.",
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "href": {
                        "description": "Dereferencable location of the package.",
                        "type": "string",
                        "format": "uri"
                    },
                    "ttl": {
                        "description": "Time at which resource will become unavailable.",
                        "type": "string",
                        "format": "date-time"
                    },
                    "dereference": {
                        "description": "Whether or not the resource should be retrieved.",
                        "type": "boolean"
                    },
                    "type": {
                        "description": "MIME type of the remote resource.",
                        "type": "string"
                    },
                    "packaging": {
                        "description": "URI unambiguously identifying the packaging profile.",
                        "type": "string",
                        "format": "uri"
                    }
                }
            }
        }
    }
}
