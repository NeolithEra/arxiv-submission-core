{
    "$schema": "http://json-schema.org/schema#",
    "id": "http://arxiv.org/schema/submit/submission.json",
    "title": "Metadata",
    "description": "Describes an arXiv submission. ",
    "required": ["metadata", "primary_classification"],
    "additionalProperties": false,
    "definitions": {
        "agent": {
            "type": "object",
            "required": ["agent_type", "identifier"],
            "properties": {
                "agentType": {
                    "description": "Usually one of ``UserAgent``, ``Client``, or ``System``",
                    "type": "string"
                },
                "identifier": {
                    "description": "Unique identifier for the agent.",
                    "type": "string"
                }
            }
        },
        "classification": {
            "type": "object",
            "required": [
                "group",
                "archive",
                "category"
            ],
            "additionalProperties": false,
            "properties": {
                "group": {
                    "description": "The name of an arXiv group.",
                    "type": "string"
                },
                "archive": {
                    "description": "The abbreviated identifier for an arXiv archive.",
                    "type": "string"
                },
                "category": {
                    "description": "The abbreviated identifier for an arXiv subject class. E.g. KT, DC.",
                    "type": "string"
                }
            }
        },
        "metadata": {
            "description": "Metadata document for a deposit.",
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "title": {
                    "description": "Title of the submission.",
                    "type": "string"
                },
                "abstract": {
                    "description": "Paper abstract provided by author.",
                    "type": "string"
                },
                "author_canonical": {
                    "description": "Canonical author string generated from the ``authors``. Read-only.",
                    "readonly": true,
                    "type": "string"
                },
                "author": {
                    "description": "Authors",
                    "type": "array",
                    "minItems": 1,
                    "items": {
                        "description": "Author(s) of the submitted paper, in order.",
                        "type": "object",
                        "required": [
                            "forename",
                            "surname"
                        ],
                        "properties": {
                            "forename": {
                                "type": "string"
                            },
                            "surname": {
                                "type": "string"
                            },
                            "initials": {
                                "type": "string"
                            },
                            "affiliation": {
                                "type": "string"
                            },
                            "canonical": {
                                "description": "`<forename> <initial(s)> <surname> (<affiliation>)`. Read-only.",
                                "readonly": true,
                                "type": "string"
                            },
                            "email": {
                                "description": "E-mail address of the author.",
                                "type": "string"
                            },
                            "identifier": {
                                "description": "Author authority record URI. This may be an arXiv authority URI or an ORCID identifier.",
                                "type": "string",
                                "format": "uri"
                            }
                        }
                    }
                },
                "doi": {
                    "description": "External DOI for the submission. See https://arxiv.org/help/prep#doi",
                    "type": ["string", "null"]
                },
                "msc_class": {
                    "description": "MSC subject class for this submission. See https://arxiv.org/help/prep#msc",
                    "type": ["string", "null"]
                },
                "acm_class": {
                    "description": "ACM subject class for this submission. See https://arxiv.org/help/prep#acm",
                    "type": ["string", "null"]
                },
                "report_num": {
                    "description": "Report number for this submission. See https://arxiv.org/help/prep#report",
                    "type": ["string", "null"]
                },
                "journal_ref": {
                    "description": "Journal ref (citation) for this submission. See https://arxiv.org/help/prep#journal",
                    "type": ["string", "null"]
                }
            }
        }
    },
    "properties": {
        "submission_id": {
            "description": "arXiv submission identifier. Read-only.",
            "readonly": true,
            "type": "string"
        },
        "arxiv_id": {
            "description": "If the submission has been published, this is the associated arXiv ID",
            "readonly": true,
            "type": "string"
        },
        "owner": {
            "description": "The agent responsible for the submission. May be transferred to another agent by the current owner.",
            "$ref": "#/definitions/agent"
        },
        "creator": {
            "description": "The agent responsible for creating the submission. Read-only.",
            "readonly": true,
            "$ref": "#/definitions/agent"
        },
        "proxy": {
            "description": "The Client agent who registered the submission on behalf of the creator. Read-only.",
            "readonly": true,
            "$ref": "#/definitions/agent"
        },
        "metadata": {
            "$ref": "#/definitions/metadata"
        },
        "submitter_is_author": {
            "description": "Indicates whether or not the submitter is also an author of the resource.",
            "type": "boolean"
        },
        "submitter_accepts_policy": {
            "description": "Indicates whether or not the submitter accepts the arXiv submission ",
            "type": "boolean"
        },
        "license": {
            "description": "License to be applied to the submission.",
            "type": ["string", "null"],
            "format": "uri"
        },
        "primary_classification": {
            "$ref": "#/definitions/classification"
        },
        "secondary_classification": {
            "description": "The archive(s) and subject class(es) for this submission.",
            "type": "array",
            "items": {
                "$ref": "#/definitions/classification"
            }
        },
        "finalized": {
            "description": "Indicates whether or not the submission is ready for publication (pending moderation).",
            "type": "boolean",
            "readonly": true
        },
        "active": {
            "description": "Indicates whether or not the submission is under active processing. Submissions that are deleted, withdrawn, or published are considered inactive.",
            "type": "boolean",
            "readonly": true
        },
        "published": {
            "description": "Indicates whether or not the submission is published.",
            "type": "boolean",
            "readonly": true
        },
        "files": {
            "description": "Remote files to be included in the submission package.",
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "href": {
                        "description": "Dereferencable location of the package.",
                        "type": "string",
                        "format": "uri"
                    },
                    "ttl": {
                        "description": "Time at which resource will become unavailable.",
                        "type": "string",
                        "format": "date-time"
                    },
                    "dereference": {
                        "description": "Whether or not the resource should be retrieved.",
                        "type": "boolean"
                    },
                    "type": {
                        "description": "MIME type of the remote resource.",
                        "type": "string"
                    },
                    "packaging": {
                        "description": "URI unambiguously identifying the packaging profile.",
                        "type": "string",
                        "format": "uri"
                    }
                }
            }
        }
    }
}
