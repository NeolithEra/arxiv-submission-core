{
    "$schema": "http://json-schema.org/schema#",
    "id": "http://arxiv.org/schema/submit/log.json",
    "title": "SubmissionLog",
    "description": "Describes an arXiv submission log.",
    "required": ["submission_id", "events"],
    "additionalProperties": false,
    "definitions": {
        "agent": {
            "type": "object",
            "required": ["agent_type", "identifier"],
            "properties": {
                "agent_type": {
                    "description": "Usually one of ``UserAgent``, ``Client``, or ``System``",
                    "readonly": true,
                    "type": "string"
                },
                "identifier": {
                    "description": "Unique identifier for the agent.",
                    "readonly": true,
                    "type": "string"
                }
            }
        },
        "event": {
            "type": "object",
            "required": ["creator", "created", "event_type", "data"],
            "properties": {
                "creator": {
                    "$ref": "#/definitions/agent",
                    "readonly": true
                },
                "created": {
                    "description": "The date-time at which the event was created.",
                    "readonly": true,
                    "type": "string",
                    "format": "date-time"
                },
                "event_type": {
                    "description": "The name of the event type.",
                    "readonly": true,
                    "type": "string"
                },
                "data": {
                    "description": "Event-specific data.",
                    "readonly": true,
                    "type": "object",
                    "additionalProperties": true
                }
            }
        }
    },
    "properties": {
        "submission_id": {
            "description": "arXiv submission identifier. Read-only.",
            "readonly": true,
            "type": "string"
        },
        "events": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/event"
            }
        }
    }
}
